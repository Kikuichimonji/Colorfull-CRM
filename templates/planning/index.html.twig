{% block nav %}
    {{parent()}}
{% endblock %}
{% block content %}
    <div id="mainPlanningBlock">
        <h1>Calendrier</h1>
        <div id="calendar-holder"></div>
    </div>

{% endblock %}

{% block style %}
    {{parent()}}
