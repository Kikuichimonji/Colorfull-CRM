			<span style='color:#{{random(values)~ random(values)~ random(values)~ random(values)~ random(values)~ random(values)  }}'>C</span>
			<span style='color:#{{random(values)~ random(values)~ random(values)~ random(values)~ random(values)~ random(values)  }}'>R</span>
			<span style='color:#{{random(values)~ random(values)~ random(values)~ random(values)~ random(values)~ random(values)  }}'>M</span>
		</h1>
		<h2>Veuillez vous connecter</h2>
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form id='login-form' action="{{path('login')}}" method="post">
			<div class='mb-3'>
				<label for="email" class="form-label">Mail (demo@demo.fr)</label>
				<input type="text" name="email" id="email" value="{{ last_username }}">
			</div>
			<div class='mb-3'>
				<label for="password" class="form-label">Mot de passe (demo)</label>
				<input type="password" name="password" id="password">
				<button type="submit" class="btn btn-primary g-recaptcha" data-sitekey="6Lcxfq4eAAAAABRIbwrsHQ4dvXjZAxr5n40WKoaQ" data-callback='onSubmit' data-action='submit'>Se connecter</button>
			</div>
			<input type="hidden" name="_token" value="{{ csrf_token('login_form') }}">
		</form>
		<a href="" class="link-primary">Mot de passe oubli√©? Cliquez ici</a>
	</div>

{% endblock %}


{% block style %}
	{{parent()}}
	<link href="{{asset('assets/css/login.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block script_body %}
	{{parent()}}
	<script>
		function onSubmit(token) {
            document.getElementById("login-form").submit();
        }
	</script>
	<script src="https://www.google.com/recaptcha/api.js"></script>
{% endblock %}
